<h1>Employee profile</h1>

<h2>Contact information</h2>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email Address</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @employee.first_name %></td>
        <td><%= @employee.last_name %></td>
        <td><a href="mailto:<%= @employee.email %>"><%= @employee.email %></a></td>
      </tr>
  </tbody>
</table>

<h2>Sales to date (sorted by descending amount)</h2>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Invoice No.</th>
      <th>Units Sold</th>
      <th>Price Per Unit</th>
      <th>Invoice Frequency</th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%=sale.sale_date %></td>
        <td><%=sale.formatted_sale_amount %></td>
        <td><%=sale.invoice_no %></td>
        <td><%=sale.units_sold %></td>
        <td><%=sale.formatted_unit_price %></td>
        <td><%=sale.invoice_frequency %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', employees_path %>
