<h1>Sales Within Last 13 Months (because there weren't any in the last 3 months)</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Invoice No.</th>
      <th>Units Sold</th>
      <th>Price Per Unit</th>
      <th>Invoice Frequency</th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%=sale.sale_date %></td>
        <td><%=sale.formatted_sale_amount %></td>
        <td><%=sale.invoice_no %></td>
        <td><%=sale.units_sold %></td>
        <td><%=sale.formatted_unit_price %></td>
        <td><%=sale.invoice_frequency %></td>
      </tr>
    <% end %>
  </tbody>
</table>
