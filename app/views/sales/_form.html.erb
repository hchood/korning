<%= form_for(@sale) do |f| %>
  <% if @sale.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@sale.errors.count, "error") %> prohibited this sale from being saved:</h2>

      <ul>
      <% @sale.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :sale_date %>
    <%= f.date_field :sale_date %>
  </div>

  <div>
    <%= f.label :sale_amount %>
    <%= f.text_field :sale_amount %>
  </div>

  <div>
    <%= f.label :units_sold %>
    <%= f.text_field :units_sold %>
  </div>

  <div>
    <%= f.label :invoice_frequency %>
    <%= f.select :invoice_frequency, Sale.invoice_frequencies %>
  </div>

  <div>
    <%= f.label :invoice_no %>
    <%= f.text_field :invoice_no %>
  </div>

  <div>
    <%= f.label :employee %>
    <%= f.collection_select(:employee_id, Employee.all, :id, :name, include_blank: false) %>
  </div>

  <div>
    <%= f.label :product %>
    <%= f.collection_select(:product_id, Product.all, :id, :name) %>
  </div>

  <div>
    <%= f.label :customer %>
    <%= f.collection_select(:customer_id, Customer.all, :id, :name) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
